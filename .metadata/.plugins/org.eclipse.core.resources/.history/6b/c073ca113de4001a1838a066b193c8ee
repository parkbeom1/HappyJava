public class Test_0002_MainBody {

    public static int power;

    public static String powerOnOff(int power) {

        String powerStatus="";

        switch (power) {

        case 1 : powerStatus+="컴퓨터 ON"; Test_0002_MainBody.power=1;break;

        case 2 : powerStatus+="컴퓨터 OFF"; Test_0002_MainBody.power=2; break;

        default: powerStatus+="잘못된 입력입니다."; break;

        }

        return powerStatus; 

    }

}


